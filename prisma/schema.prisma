// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  username      String     @unique
  email         String?
  name          String?
  image         String?
  phone         String?
  mota          String?
  diachi        String?
  dientich      Float?
  sothua        Float?
  donvihtx      String?
  vitri         String?
  masovungtrong String?
}

model Account {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  username    String?    
  password    String
  role        String[]
  status      Boolean?
  xId         String?
  userCreated String?
  dateCreated String?
  userEdited  String?
  dateEdited  String?
  lastLogin   DateTime?
}

model Nongsan {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  manongsan      String?
  tennongsan     String?
  dientich       String?
  ghichu         String?
  chungnhan      String?
  imageNongsan   String?
  imageChungnhan String?
}

model Giaidoan {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  giaidoan    Int?
  tengiaidoan String?
  color       String?
  ghichu      String?
  stt         Int?
  nhatkys     Nhatky[]
  congviecs   GiaidoanCongviec[]
}

model Congviec {
  id              String            @id @default(auto()) @map("_id") @db.ObjectId
  stt             Int?
  tencongviec     String?
  chitietcongviec String?
  ghichu          String?
  chiphidvt       String?
  nhatkys         Nhatky[]
  giaidoans       GiaidoanCongviec[]
}

model GiaidoanCongviec {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  giaidoanId String
  congviecId String
  giaidoan   Giaidoan @relation(fields: [giaidoanId], references: [id])
  congviec   Congviec @relation(fields: [congviecId], references: [id])

  @@unique([giaidoanId, congviecId])
}


model Donvitinh {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  stt       String?
  donvitinh String?
}

model Loaiphanthuoc {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  loai          Int?
  tenloai       String?
  loaiphanthuoc String?
  phan          Phanthuoc[]
}

model Phanthuoc {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  stt             String?
  tenphanthuoc    String?
  ghichu          String?
  loai            String?
  loaiphanthuocId String?        @db.ObjectId
  loaiphanthuoc   Loaiphanthuoc? @relation(fields: [loaiphanthuocId], references: [id])
  nhatkys         Nhatky[]
}

model Nhatky {
  id              String     @id @default(auto()) @map("_id") @db.ObjectId
  stt             String?
  loaiphan        String?
  phanthuoc       String?    @db.ObjectId
  tenphan         String?
  loaithuoc       String?
  tenthuoc        String?
  date            String?
  image           String?
  muavu           String?
  user            String?
  chiphi          Int?
  chitietcongviec String?
  congviec        String?    @db.ObjectId
  dvt             String?
  giaidoan        String?    @db.ObjectId
  giaidoanObject  Giaidoan?  @relation(fields: [giaidoan], references: [id])
  congviecObject  Congviec?  @relation(fields: [congviec], references: [id])
  phanthuocObject Phanthuoc? @relation(fields: [phanthuoc], references: [id])
  ngaycapnhat     String?
  soluong         Int?
  tencongviec     String?
  thanhtien       Int?
  ghichu          String?
  year            String?
}

model Muavu {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  muavu      String?
  nam        String?
  ngaybatdau String?
  phuongphap String?
  giong      String?
  dientich   Float?
  soluong    Float?
  giagiong   Float? 
  stt        String?
  ghichu     String?
  user       String
}

model Thuhoach {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  muavuId    String? @db.ObjectId
  ngaythuhoach String?
  tongthuhoach String?
  giaban      String?
  noithuhoach String?
  user       String
}
